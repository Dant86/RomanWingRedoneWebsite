<head>
    <link rel="stylesheet" href="/Static/CSS/login.css">
</head>
{{#if error}}
    <h1>{{error}}</h1>
{{/if}}

<div class="login-form">
    <div class="login">
        <h1>User Login</h1>
        <form action="/users/login" method="POST">
            <div class="input_container" id="top">
                <img class="login_icon" src="/Assets/Images/email.svg">
                <input class="login_input" type="text" placeholder="Email" name="email" required=true>
            </div>
            <div class="input_container">
                <img class="login_icon" src="/Assets/Images/lock.svg">
                <input class="login_input" type="password" placeholder="Password" name="password" required=true>
            </div>
            <button type="submit" class="login_button">Login</button>
            <a class="account_link" href="/signup">Don't have an account yet? Create one here ‚ûù</a>
        </form>
    </div>
</div>
